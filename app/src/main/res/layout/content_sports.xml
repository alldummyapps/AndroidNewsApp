<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sportsContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".sports_package.activities.SportsActivity"
    tools:showIn="@layout/activity_sports">




    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/sports_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#673AB7"
        android:clipToPadding="false"
        app:itemIconSize="40dp"
        app:menu="@menu/sports_menu"
        app:itemIconTint="@drawable/bottom_navigation_sports_selector"


        />
</FrameLayout>